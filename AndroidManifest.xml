<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baconbao.circols"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.baconbao.circols.AppClass"
        android:allowBackup="true"
        android:icon="@drawable/baconbao_circols_icon"
        android:label="Circols"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait" >
        <activity
            android:name="com.baconbao.circols.DataShowActivity"
            android:label="Circols"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.baconbao.circols.CameraActivity"
            android:label="CameraActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.baconbao.circols.TempShowActivity"
            android:label="TempShowActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.baconbao.circols.MapWebActivity"
            android:label="MapWebActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.baconbao.circols.AboutPageActivity"
            android:label="AboutPageActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>