<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:tileMode="repeat"
    tools:context=".TempShow"
    android:gravity="center"
    android:orientation="vertical" >
        
        <ImageView
        android:id="@+id/tempImage"
        android:layout_width="260dp"
    	android:layout_height="260dp"
    	android:layout_marginTop="0dp"
    	android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         />
        
        <EditText
            android:id="@+id/tempText"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tempImage"
            android:layout_alignRight="@+id/tempImage"
            android:layout_below="@+id/tempImage"
            android:background="@layout/sh_style4edittext"
            android:gravity="top"
            android:hint="About the photo...?        "
            android:maxLength="70"
            android:padding="15dip"
            android:singleLine="true" />
        
       <ImageView
        android:id="@+id/tempSend"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dip"
        android:src="@drawable/selector_cambtn" />

</LinearLayout>